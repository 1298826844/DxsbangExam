<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_common" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="填写代取信息"
        android:textColor="@color/gray" />

    <EditText
        android:id="@+id/intro_exp_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/acm_inputbox"
        android:drawableLeft="@drawable/intro_icon"
        android:hint="简介"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/price_exp_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/acm_inputbox"
        android:drawableLeft="@drawable/price_icon"
        android:hint="酬劳"
        android:inputType="number"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="填写个人信息"
        android:textColor="@color/gray" />

    <EditText
        android:id="@+id/name_exp_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/acm_inputbox"
        android:drawableLeft="@drawable/actor_icon"
        android:hint="姓名"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/addr_exp_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/acm_inputbox"
        android:drawableLeft="@drawable/locate_icon"
        android:hint="宿舍住址"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <EditText
        android:id="@+id/phone_exp_edit"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/acm_inputbox"
        android:drawableLeft="@drawable/phone_icon"
        android:hint="联系电话"
        android:inputType="phone"
        android:paddingLeft="5dp"
        android:singleLine="true"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/expUpText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/search_bg"
        android:gravity="center"
        android:text="发布"
        android:textColor="#fff"
        android:textSize="15sp" />

</LinearLayout>