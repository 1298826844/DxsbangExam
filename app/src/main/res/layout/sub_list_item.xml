<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/sch_gridview_bg"
    android:padding="5dp"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="5dp"
        >
        <ImageView
            android:id="@+id/pic_sub_item"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:src="@drawable/subins_icon"
            />
        <TextView 
            android:id="@+id/intro_sub_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pic_sub_item"
            android:layout_marginRight="40dp"
            android:layout_marginLeft="10dp"
            android:text="简述简述简述简述简述简述简述简述简述简述简述简述简述"
            />

        <TextView
            android:id="@+id/money_sub_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/pic_sub_item"
            android:layout_alignParentRight="true"
            android:text="￥1500"
            android:textSize="12sp"
            android:textColor="@color/gray" />

    </RelativeLayout>

</LinearLayout>
