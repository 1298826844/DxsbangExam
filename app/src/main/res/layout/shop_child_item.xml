<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sch_gridview_bg"
    android:orientation="vertical" >
    <RelativeLayout 
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp">
        <ImageView
            android:id="@+id/pic_print_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/icon_l"
            />
        <TextView 
            android:id="@+id/name_print_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/pic_print_item"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="60dp"
            android:textSize="18sp"
            android:text="名asdasfafasfasfagadgadgdagadgasasdad"
            android:maxLines="2"
            />
        <TextView 
            android:id="@+id/describe_print_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name_print_item"
            android:layout_toRightOf="@id/pic_print_item"
            android:layout_marginRight="70dp"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="10dp"
            android:maxLines="3"
            android:ellipsize="end"
            android:text="简介"
            android:textColor="@color/food_intro"
            />

        <TextView 
            android:id="@+id/status_print_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="正常"
            android:textColor="@color/free"
            android:textSize="12sp"
            />
        <TextView 
            android:id="@+id/send_print_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@id/status_print_item"
            android:text=""
            android:textSize="12sp"
            />
        <TextView 
            android:id="@+id/locate_print_item"
            android:layout_width="58dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:gravity="right"
            android:layout_below="@id/status_print_item"
            android:text="地点"
            android:textSize="10sp"
            android:textColor="@color/gray"
            />
    </RelativeLayout>

</LinearLayout>
