<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/title_common" />

    <EditText
        android:id="@+id/oldPass"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/acm_inputbox"
        android:digits="@string/limits"
        android:hint="请输入原密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="5dp" />

    <EditText
        android:id="@+id/newPass1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/acm_inputbox"
        android:digits="@string/limits"
        android:hint="请输入新密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="5dp" />

    <EditText
        android:id="@+id/newPass2"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/acm_inputbox"
        android:digits="@string/limits"
        android:hint="请再次输入密码"
        android:inputType="textPassword"
        android:maxLength="20"
        android:padding="5dp" />

    <Button
        android:id="@+id/repassBtn"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/register_user_btn"
        android:gravity="center"
        android:text="确认更改"
        android:textColor="#fff"
        android:textSize="15sp" />

</LinearLayout>