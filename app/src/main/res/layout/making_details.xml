<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <include layout="@layout/title_common" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="信息"
        android:textColor="@color/gray" />

    <TextView
        android:id="@+id/name_making_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="店名" />

    <TextView
        android:id="@+id/locate_making_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="位置" />

    <TextView
        android:id="@+id/describe_making_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="简介" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="填写信息"
        android:textColor="@color/gray" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="联系电话" />
    <EditText
        android:id="@+id/phone_making_edit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ll_bg_c"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:inputType="phone" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="备注" />
    
    <com.example.xsb.view.ClearEditView
        android:id="@+id/need_making_edit"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_margin="10dp"
        android:gravity="top"
        android:background="@drawable/acm_inputbox"
        android:hint="您有什么需要呢~"
        android:paddingLeft="5dp"
        android:textSize="15sp" 
        android:minLines="3"
        android:maxLines="3"/>

    <TextView
        android:id="@+id/makingUpText"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:background="@drawable/search_bg"
        android:gravity="center"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="15sp" />

</LinearLayout>
